<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="create.table.attachment" author="dpavlenko">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="calculator" tableName="attachment"/>
            </not>
        </preConditions>
        <createTable schemaName="calculator" tableName="attachment" remarks="Вложение">
            <column name="id" type="serial" remarks="Уникальный идентификатор">
                <constraints primaryKey="true"/>
            </column>
            <column name="file_path" type="varchar" remarks="Путь до файла в файловом хранилище">
                <constraints nullable="false"/>
            </column>
            <column name="file_name" type="varchar" remarks="Наименование файла">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="calculator" tableName="attachment"/>
        </rollback>
    </changeSet>
</databaseChangeLog>