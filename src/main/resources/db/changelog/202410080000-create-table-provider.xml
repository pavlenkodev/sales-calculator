<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="provider.table.create" author="dpavlenko">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="calculator" tableName="provider"/>
            </not>
        </preConditions>
        <createTable schemaName="calculator" tableName="provider" remarks="Поставщик">
            <column name="id" type="serial" remarks="Уникальный идентификатор">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar" remarks="Наименование">
                <constraints nullable="false"/>
            </column>
<!-- TODO переделать на отдельную таблицу для сохранения нескольких типов контактов, телега и тд используя enum-->
            <column name="phone_number" type="varchar" remarks="Номер телефона">
                <constraints nullable="false"/>
            </column>
<!-- TODO переделать на отдельную таблицу с возможностью добавления цен быстрой и медленной доставки и тд-->
            <column name="price" type="double" remarks="Цена доставки">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="calculator" tableName="provider"/>
        </rollback>
    </changeSet>

</databaseChangeLog>