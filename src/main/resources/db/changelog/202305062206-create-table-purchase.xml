<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="purchasing.table.create" author="dpavlenko">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="calculator" tableName="purchase"/>
            </not>
        </preConditions>
        <createTable schemaName="calculator" tableName="purchase" remarks="Закупка">
            <column name="id" type="serial" remarks="Уникальный идентификатор">
                <constraints primaryKey="true"/>
            </column>
            <column name="number" type="varchar" remarks="Номер закупки">
                <constraints nullable="false"/>
            </column>
            <column name="cost_rub" type="double" remarks="Стоимость закупки в рублях">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_cost_rub" type="double" remarks="Стоимость доставки в рублях">
                <constraints nullable="false"/>
            </column>
            <column name="cost_yuan" type="double" remarks="Стоимость закупки в юанях"/>
            <column name="delivery_cost_yuan" type="double" remarks="Стоимость закупки в юанях"/>
            <column name="rate_yuan_rub" type="double" remarks="Курс юаня к рублю на момент закупки"/>
            <column name="from" type="varchar" remarks="Откуда была закупка">
                <constraints nullable="false"/>
            </column>
            <column name="order_dt" type="timestamp" remarks="Дата заказа">
                <constraints nullable="false"/>
            </column>
            <column name="receive_dt" type="timestamp" remarks="Дата заказа"/>
            <column name="weight" type="double" remarks="Вес закупленного товара"/>
            <column name="cost_from_weight_kg" type="double" remarks="Стоимость доставки из китая за кг"/>
            <column name="create_dt" type="timestamp" remarks="Дата создания">
                <constraints nullable="false"/>
            </column>
            <column name="change_dt" type="timestamp" remarks="Дата создания">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="calculator" tableName="purchasing"/>
        </rollback>
    </changeSet>
</databaseChangeLog>